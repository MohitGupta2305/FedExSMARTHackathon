import pandas as pd
import numpy as np
import random
from datetime import datetime, timedelta
from google.colab import files

# =====================================================
# CONFIG
# =====================================================
N_CASES = 250
START_DATE = datetime.now() - timedelta(days=60)

EMAIL_ONLY_RATIO = 0.4
CALL_ONLY_RATIO = 0.3
MIXED_RATIO = 0.3

np.random.seed(42)
random.seed(42)

# =====================================================
# PAYMENT GENERATORS
# =====================================================
AMOUNTS = [100, 250, 500, 750, 1200, 2500, 5000]
DATES = ["by Friday", "next week", "by 15th Jan", "by end of month", None]

# =====================================================
# CUSTOMER PROFILES (BEHAVIOR-CONSTRAINED)
# =====================================================
CUSTOMER_PROFILES = {
    "cooperative": {
        "tone": "cooperative",
        "intent": "willing_to_pay",
        "payment": ["full", "partial"],
        "templates": [
            "I acknowledge the outstanding balance.",
            "I can pay ${amount} {date}.",
            "Thanks for the reminder, arranging payment."
        ]
    },
    "distressed": {
        "tone": "frustrated",
        "intent": "partial_pay",
        "payment": ["partial", "vague"],
        "templates": [
            "I lost my job and can only pay ${amount} {date}.",
            "Medical expenses have affected my finances.",
            "I may be able to pay something soon."
        ]
    },
    "delayer": {
        "tone": "neutral",
        "intent": "delay",
        "payment": ["vague"],
        "templates": [
            "I am reviewing this internally.",
            "I will get back to you later.",
            "Please allow more time."
        ]
    },
    "hostile": {
        "tone": "hostile",
        "intent": "threaten",
        "payment": [],
        "templates": [
            "Stop harassing me immediately.",
            "I am not paying this amount.",
            "I will contact my lawyer if this continues."
        ]
    },
    "ghost": {
        "tone": "silent",
        "intent": "no_response",
        "payment": [],
        "templates": [""]
    }
}

CUSTOMER_WEIGHTS = [0.30, 0.25, 0.20, 0.15, 0.10]

# =====================================================
# DCA PROFILES
# =====================================================
DCA_TEMPLATES = [
    "This is a polite reminder regarding your overdue invoice.",
    "Please let us know a suitable payment date.",
    "Immediate payment is required to avoid escalation.",
    "Failure to pay will result in further action."
]

# =====================================================
# DATA GENERATION
# =====================================================
rows = []

for case_idx in range(1, N_CASES + 1):
    case_id = f"CASE_{case_idx:05d}"
    cust_id = f"CUST_{random.randint(1, 900):04d}"

    customer_key = random.choices(list(CUSTOMER_PROFILES.keys()), CUSTOMER_WEIGHTS)[0]
    customer = CUSTOMER_PROFILES[customer_key]

    case_type = random.choices(
        ["email_only", "call_only", "mixed"],
        [EMAIL_ONLY_RATIO, CALL_ONLY_RATIO, MIXED_RATIO]
    )[0]

    n_events = random.randint(12, 22)
    base_time = START_DATE + timedelta(days=random.randint(0, 10))

    last_sender = "DCA"  # start with DCA
    for i in range(n_events):

        # -------------------------------
        # CHANNEL LOGIC
        # -------------------------------
        if case_type == "email_only":
            channel = "Email"
        elif case_type == "call_only":
            channel = "Call"
        else:
            channel = random.choice(["Email", "Call"])

        # -------------------------------
        # TURN-TAKING LOGIC
        # -------------------------------
        if channel == "Email":
            sender = "Customer" if last_sender == "DCA" else "DCA"
        else:
            sender = random.choices(["DCA", "Customer"], weights=[0.6, 0.4])[0]

        last_sender = sender

        # -------------------------------
        # MESSAGE GENERATION
        # -------------------------------
        if sender == "DCA":
            body = random.choice(DCA_TEMPLATES)
            tone, intent = "professional", "reminder"
            cust_behavior = cust_tone = cust_intent = None
            dca_behavior, dca_tone, dca_intent = "professional", tone, intent

        else:
            template = random.choice(customer["templates"])
            amount = random.choice(AMOUNTS) if customer["payment"] else None
            date = random.choice(DATES)

            body = template.format(
                amount=amount if amount else "",
                date=date if date else ""
            ).strip()

            cust_behavior = customer_key
            cust_tone = customer["tone"]
            cust_intent = customer["intent"]
            dca_behavior = dca_tone = dca_intent = None

        rows.append({
            "email_id": f"{channel}_{case_id}_{i+1}",
            "case_id": case_id,
            "cust_id": cust_id,
            "sender_type": sender,
            "channel": channel,
            "email_timestamp": base_time + timedelta(days=i, hours=random.randint(1, 6)),
            "conversation_phase": None,
            "email_subject": "Phone Call Interaction" if channel == "Call" else "Payment Follow-up",
            "email_body": body,
            "customer_behavior_type": cust_behavior,
            "customer_tone_label": cust_tone,
            "customer_intent_label": cust_intent,
            "dca_behavior_type": dca_behavior,
            "dca_tone_label": dca_tone,
            "dca_intent_label": dca_intent
        })

# =====================================================
# FINAL DATAFRAME
# =====================================================
final_df = pd.DataFrame(rows)
final_df.sort_values(["case_id", "email_timestamp"], inplace=True)

final_df.to_csv("snow_case_interactions_REALISTIC.csv", index=False)

print("âœ… Realistic SNOW dataset generated")
print("Cases:", final_df.case_id.nunique())
print("Interactions:", len(final_df))

files.download("snow_case_interactions_REALISTIC.csv")

# =====================================================
# AGENT-2 : CASE SUMMARY GENERATION & APPEND (SNOW)
# =====================================================

from google.colab import files
import pandas as pd
import numpy as np
import re

# =====================================================
# STEP 0: UPLOAD FILE (NO PATH USED)
# =====================================================
uploaded = files.upload()
file_name = list(uploaded.keys())[0]

df = pd.read_csv(file_name)
df = df.replace(r'^\s*$', np.nan, regex=True)
df.sort_values(["case_id", "email_timestamp"], inplace=True)

print("Cases:", df.case_id.nunique())
print("Total interactions:", len(df))

# =====================================================
# STEP 1: GENERIC NLP EXTRACTORS
# =====================================================

def extract_amount(text):
    if not isinstance(text, str):
        return None
    match = re.search(r'(?:\$|usd\s*)?(\d{2,7})', text.lower())
    return int(match.group(1)) if match else None


def extract_date_expression(text):
    if not isinstance(text, str):
        return None

    patterns = [
        r'\b\d{1,2}(st|nd|rd|th)?\s+(jan|feb|mar|apr|may|jun|jul|aug|sep|oct|nov|dec)',
        r'\b(jan|feb|mar|apr|may|jun|jul|aug|sep|oct|nov|dec)\s+\d{1,2}',
        r'\bby\s+(monday|tuesday|wednesday|thursday|friday)',
        r'\bnext\s+(week|month)',
        r'\b(monday|tuesday|wednesday|thursday|friday)\b'
    ]

    for p in patterns:
        m = re.search(p, text.lower())
        if m:
            return m.group(0)
    return None

# =====================================================
# STEP 2: CASE INTELLIGENCE BUILDER
# =====================================================

def build_case_intelligence(case_df):
    ci = {}

    customer_msgs = case_df[case_df["sender_type"] == "Customer"]

    ci["acknowledged"] = customer_msgs["customer_intent_label"].isin(
        ["willing_to_pay", "partial_pay"]
    ).any()

    ci["hostile"] = customer_msgs["customer_tone_label"].eq("hostile").any()
    ci["dispute"] = customer_msgs["customer_intent_label"].eq("threaten").any()

    ci["financial_hardship"] = customer_msgs["customer_behavior_type"].eq(
        "distressed"
    ).any()

    ci["delay_behavior"] = customer_msgs["customer_behavior_type"].eq(
        "delayer"
    ).any()

    ci["ghost"] = customer_msgs.empty

    ci["ptp_amount"] = None
    ci["ptp_date"] = None
    ci["ptp_committed"] = False

    for text in customer_msgs["email_body"].dropna():
        amount = extract_amount(text)
        date_expr = extract_date_expression(text)

        if amount:
            ci["ptp_amount"] = amount
            ci["ptp_committed"] = True
        if date_expr:
            ci["ptp_date"] = date_expr

    return ci

# =====================================================
# STEP 3: SUMMARY GENERATORS
# =====================================================

def generate_line_1(ci):
    if ci["ghost"]:
        return (
            "Customer has not acknowledged the outstanding balance and remains non-responsive despite repeated outreach attempts."
        )
    if ci["acknowledged"] and not ci["dispute"]:
        return (
            "Customer acknowledged the outstanding balance and confirmed engagement on the account."
        )
    if ci["dispute"]:
        return (
            "Customer has not acknowledged the outstanding balance and disputes the validity of the invoice."
        )
    return (
        "Customer has not formally acknowledged the outstanding balance and continues to delay resolution."
    )


def generate_line_2(ci):
    if ci["ptp_committed"]:
        if ci["ptp_date"]:
            return (
                f"Committed to a payment of ${ci['ptp_amount']} by {ci['ptp_date']} toward settlement of the invoice."
            )
        return (
            f"Committed to a payment of ${ci['ptp_amount']} toward settlement of the invoice."
        )
    if ci["acknowledged"]:
        return (
            "No confirmed payment date has been committed; prior discussions indicate tentative intent only."
        )
    return (
        "No payment commitment has been made despite multiple follow-ups."
    )


def generate_line_3(ci):
    if ci["hostile"] or ci["dispute"]:
        return (
            "Communication tone is adversarial, indicating high compliance risk and potential need for formal escalation."
        )
    if ci["financial_hardship"]:
        return (
            "Tone is neutral to cooperative with financial hardship indicators, suggesting moderate recovery risk and need for flexible engagement."
        )
    if ci["delay_behavior"]:
        return (
            "Tone is polite but evasive, indicating elevated risk of prolonged delay without escalation."
        )
    if ci["ghost"]:
        return (
            "Lack of customer engagement indicates elevated recovery risk and may require alternate contact strategies."
        )
    return (
        "Communication tone remains cooperative, indicating favorable recovery conditions."
    )

# =====================================================
# STEP 4: GENERATE ONE SUMMARY PER CASE
# =====================================================

case_summary_map = {}

for case_id, case_df in df.groupby("case_id"):
    ci = build_case_intelligence(case_df)

    summary = " ".join([
        generate_line_1(ci),
        generate_line_2(ci),
        generate_line_3(ci)
    ])

    case_summary_map[case_id] = summary

# =====================================================
# STEP 5: APPEND SUMMARY COLUMN TO ORIGINAL FILE
# =====================================================

df["case_summary"] = df["case_id"].map(case_summary_map)

# =====================================================
# STEP 6: EXPORT & DOWNLOAD
# =====================================================

output_file = "snow_case_interactions_WITH_SUMMARY.csv"
df.to_csv(output_file, index=False)

files.download(output_file)
